{% extends 'FrontBundle::layout.html.twig' %}

{% block content %}
    <h1>Post</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td>{{ post.content }}</td>
        </tr>
        <tr>
            <th>Date d'ajout</th>
            <td>{% if post.dateAdd %}{{ post.dateAdd|date('d-m-Y H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Date de mise à jour</th>
            <td>{% if post.dateUpdate %}{{ post.dateUpdate|date('d-m-Y H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Modification</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
